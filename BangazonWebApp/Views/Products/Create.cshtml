
@model BangazonWebApp.Models.ProductViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Product.Title" class="control-label"></label>
                <input asp-for="@Model.Product.Title" class="form-control" />
                <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Quantity" class="control-label"></label>
                <input asp-for="@Model.Product.Quantity" class="form-control" />
                <span asp-validation-for="@Model.Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Description" class="control-label"></label>
                <input asp-for="@Model.Product.Description" class="form-control" />
                <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Price" class="control-label"></label>
                <input asp-for="@Model.Product.Price" class="form-control" />
                <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="@Model.Product.LocalDelivery" /> @Html.DisplayNameFor(model => model.LocalDelivery)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Location" class="control-label"></label>
                <input asp-for="@Model.Product.Location" class="form-control" />
                <span asp-validation-for="@Model.Product.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Photo" class="control-label"></label>
                <input asp-for="@Model.Product.Photo" class="form-control" />
                <span asp-validation-for="@Model.Product.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">

                  <div class="col-md-10">
                            @Html.LabelFor(model => model.Product.ProductTypeId)
                            @Html.DropDownList(
                         "Product.ProductTypeId",
                         @Model.ProductTypes,
                         new
                         {
                             @name = "Product.ProductTypes"
                         }
                     )
                    <span asp-validation-for="@Model.Product.ProductTypeId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
